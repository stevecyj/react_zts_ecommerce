{
  "compilerOptions": {
    "target": "esnext",
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./node_modules/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "api/*": [
        "./src/api/*"
      ],
      "common/*": [
        "./src/common/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "config/*": [
        "./src/config/*"
      ],
      "extend/*": [
        "./src/extend/*"
      ],
      "locale/*": [
        "./src/locale/*"
      ],
      "router/*": [
        "./src/router/*"
      ],
      "store/*": [
        "./src/store/*"
      ],
      "assets/*": [
        "./src/assets/*"
      ],
      "views/*": [
        "./src/views/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "public",
    "dist"
  ]
}
